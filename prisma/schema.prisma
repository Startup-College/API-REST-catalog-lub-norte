generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id_user    String   @id @default(uuid())
  email      String   @unique
  password   String
  name       String
  surname    String
  CPF_CNPJ   String   @unique
  birth_date DateTime

  create_at DateTime   @default(now())
  update_at DateTime   @updatedAt
  Products  Products[]

  @@map("users")
}

model Products {
  id_product  String @id @default(uuid())
  name        String
  API_ACAE    String
  base        String
  SAE         String
  brand       String
  description String
  liter       String

  id_user     String
  id_category String

  users      Users      @relation(fields: [id_user], references: [id_user])
  categories Categories @relation(fields: [id_category], references: [id_category])

  @@map("products")
}

model Categories {
  id_category String     @id @default(uuid())
  segment     String
  Products    Products[]

  @@map("categories")
}
